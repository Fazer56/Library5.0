@model IEnumerable<Library.Models.Customer>

@{
	ViewBag.Title = "StudentList";
	Layout = "~/Views/Shared/LibrarianLayout.cshtml";
}



<div class="mt-2"> </div>
<div class="mb-2">
	@if (ViewBag.EditStudent != null)
	{
		<h5><span style="color: lime">Success: </span>@ViewBag.EditStudent</h5>
	}
	@if (ViewBag.StudentDelete != null)
	{
		<h5><span style="color: lime">Success: </span>@ViewBag.StudentDelete <span style="color: red"> Deleted</span></h5>
	}

</div>
<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"><input type="button" value="Subject Guides" class="btn btn-primary" onclick="location.href='@Url.Action("SubjectGuide", "Librarian")'" /></div>
	<div class="col-sm-2"><input type="button" value="Books" class="btn btn-primary" onclick="location.href='@Url.Action("BookList", "Librarian")'" /></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"> <input type="button" value="Log Out" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("LogOut", "Librarian")'" /></div>
</div>
<div class="row">
	<div class="col-sm-3">
		<div class="mt-3">
			<h2>Add Students</h2>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-3">
		<input type="button" value="Add Students Page" class="btn btn-success" onclick="location.href='@Url.Action("AddStudent", "Librarian")'" />
	</div>
</div>

<div class="mb-3"></div>
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4"><h2>Edit or Delete Students</h2></div>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Email</th>
			<th scope="col">Password</th>
			<th scope="col">Privalige</th>
			<th scope="col">Field</th>
			<th scope="col">Fine</th>
			<th scope="col">Edit</th>
			<th scope="col">Delete</th>

	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-hover">
				<td scope="col">@item.CustName</td>
				<td scope="col">@item.CustEmail</td>
				<td scope="col">@item.CPassword</td>
				<td scope="col">@item.Privalige</td>
				<td scope="col">@item.Field</td>
				<td scope="col">@item.Fine</td>
				<td scope="col"><input type="button" value="Edit" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("EditStudent", "Librarian",  new { custID = item.CustID })'" /></td>
				<td scope="col"><input type="button" value="Delete" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("DeleteStudent", "Librarian",  new { custID = item.CustID })'" /></td>
			</tr>
		}
	</tbody>
</table>
