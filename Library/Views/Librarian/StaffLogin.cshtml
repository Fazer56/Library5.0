@model Library.Models.Librarian
@{
    ViewBag.Title = "StaffLogin";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="mt-3">
    <h2>Staff Login</h2>
</div>


<div class="mb-2"></div>

@if (Session["Error"] != null)
{
    <h3>@Session["Error"].ToString()</h3>
}

@using (Html.BeginForm("StaffLogin", "Librarian", FormMethod.Post))
{
    <form>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (ViewBag.Message != null)
        {
            @ViewBag.Message
        }

        <fieldset>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(a => a.LibrarianID, new { htmlAttributes = new { @class = "form-control", @type = "input", @placeholder = "Enter StaffID" } })
                        @Html.ValidationMessageFor(a => a.LibrarianID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Enter Password" } })
                        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
}
