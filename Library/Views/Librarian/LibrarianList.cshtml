@model IEnumerable<Library.Models.Librarian>

@{
	ViewBag.Title = "LibrarianList";
	Layout = "~/Views/Shared/LibrarianLayout.cshtml";
}

<div class="mt-3"></div>
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4"><h3>Welcome Library Administrator</h3></div>
	<div class="col-sm-4"></div>
</div>

<div class="mt-3">
	<h3>Add Librarian</h3>
</div>


<div class="row">
	<div class="col-sm-3">
		<input type="button" value="Add Librarians Page" class="btn btn-success" onclick="location.href='@Url.Action("AdminArea", "Librarian")'" />
	</div>
</div>

<div class="container">

	<div class="mb-2"> </div>

	@if (ViewBag.LibEdit != null)
	{
		<h5><span style="color: lime">Success:</span>@ViewBag.LibEdit</h5>
	}
	@if (ViewBag.LibDelete != null)
	{
		<h5><span style="color: lime">Success:</span>@ViewBag.LibDelete <span style="color: red"> Deleted</span></h5>
	}

	<div class="mb-3"></div>
	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4"><h2>Edit or Delete Librarians</h2></div>
	</div>

	<table class="table table-hover">
		<thead>
			<tr class="table-primary">
				<th scope="col">Name</th>
				<th scope="col">Campus</th>
				<th scope="col">Password</th>
				<th scope="col">Position</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>

		</thead>
		<tbody>

			@foreach (var item in Model)
			{
				<tr class="table-hover">
					<td scope="col">@item.Name</td>
					<td scope="col">@item.LibLocation</td>
					<td scope="col">@item.Password</td>
					<td scope="col">@item.Position</td>

					<td scope="col"><input type="button" value="Edit" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("EditLibrarian", "Librarian",  new { libID = item.LibrarianID })'" /></td>
					<td scope="col"><input type="button" value="Delete" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("DeleteLibrarian", "Librarian",  new { libID = item.LibrarianID })'" /></td>
				</tr>
			}
		</tbody>
	</table>

</div>