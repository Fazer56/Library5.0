

@model IEnumerable<Library.Models.ItemLibrarianViewModel>
	@{
		ViewBag.Title = "BookList";
		Layout = "~/Views/Shared/_Layout.cshtml";
	}

<h2>Books</h2>

	<div id="myCarousel" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">

				<img src="~/image/thero.jpg" />

			</div>

			<div class="item">
				<img src="~/image/elec.jpg" />
			</div>

			<div class="item">

				<img src="~/image/hem.jpg" />
			</div>
		</div>

		<!-- Left and right controls -->
		<a class="left carousel-control" href="#myCarousel" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#myCarousel" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

	<div class="mt-2"></div>
	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<h2>Book List</h2>
		</div>
		
	</div>
	<table class="table table-hover">
		<thead>
			<tr class="table-primary">
				<th scope="row">Book</th>
				<th scope="col">Author</th>
				<th scope="col">ISBN</th>
				<th scope="col">Subject</th>
				<th scope="col">Year</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>

			

			@foreach (var item in Model)
			{

			<tr class="table-secondary">
				<th scope="row"> @Html.DisplayFor(model => item.It.Name)</th>
				<td> @Html.DisplayFor(model => item.Aut.AuthName)</td>
				<td> @Html.DisplayFor(model => item.It.Isbn)</td>
				<td> @Html.DisplayFor(model => item.It.Subject)</td>
				<td> @Html.DisplayFor(model => item.It.Year)</td>
				<td>
					<div class="col-sm-2"><input type="button" value="Borrow" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("BookBorrowed", "Customer", new { bookId = item.It.Isbn }, null)'" /></div>
				</td>
			</tr>
			}
		</tbody>
	</table>
